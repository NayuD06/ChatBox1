@page
@model ECommerceALLInOne.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}
@if (TempData["ErrorMassage"] != null)
{
    <div class="alert alert-danger" role="alert"> @TempData["ErrorMassage"]</div>
}
<h2>Login Page</h2>
<form method="post">
    <table>
        <tr>
            <td><label for="Username">Username:</label></td>
            <td><input type="text" asp-for="Username" id="Username"></td>
        </tr>
        <tr>
            <td><label for="Password">Password:</label></td>
            <td><input type="password" asp-for="Password" id="Password"></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center;">
                <input type="submit" value="Register">
            </td>
        </tr>
        <tr>
            <td>
                <button type="button" class="btn btn-primary">Primary</button>
            </td>
        </tr>
    </table>
</form>