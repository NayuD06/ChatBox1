@page
@model EcommerceAllInOne.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
}
<h2>Register Page</h2>
<form method="post">
    <table>
        <tr>
            <td><label for="Username">Username:</label></td>
            <td><input type="text" asp-for="Username" id="Username"></td>
        </tr>
        <tr>
            <td><label for="Email">Email:</label></td>
            <td><input type="email" asp-for="Email" id="Email"></td>
        </tr>
        <tr>
            <td><label for="Password">Password:</label></td>
            <td><input type="password" asp-for="Password" id="Password"></td>
        </tr>
        <tr>
            <td><label for="Role">Role:</label></td>
            <td>
                <select id="Role" asp-for="Role">
                    <option value="Customer">Customer</option>
                    <option value="Admin">Admin</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center;">
                <input type="submit" value="Register">
            </td>
        </tr>

        <tr>
            <td>
                <button type="button" class="btn btn-primary">Primary</button>
            </td>
        </tr>
    </table>
</form>